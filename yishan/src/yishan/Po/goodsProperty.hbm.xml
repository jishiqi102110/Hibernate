<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   <class name="yishan.Po.goodsProperty" table="goods_property" lazy="false">
        <composite-id>
        <key-property name="property">
            <column name="property_name"></column>
        </key-property>
         <key-property name="typeid">
            <column name="category_id"></column>
        </key-property>
        </composite-id>   
   </class>
</hibernate-mapping>    
    